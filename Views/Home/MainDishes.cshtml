@using Contentful.Core.Models;

@model ContentfulCollection<MainDishes>

@{
    ViewData["Title"] = "Main Dishes";
}

<head>
    <style>
        .img,iframe {
            width: 30%;
            height: auto;
            outline: #b0805a solid 0.4rem;
        }
        .card {
            margin-top: 20px;
            border: black;
        }
        h2,h3,h4,h5,h6,span {
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        }
        #firsthalf, #secondhalf {
            display: flex; 
            flex-direction:row; 
            align-items:center; 
            padding:3%; 
            justify-content:space-between;
        }
        #firsthalf {
            background-color: #FEF3E2;
        }
        #secondhalf {
            background: rgb(254,243,226);
            background: linear-gradient(180deg, rgba(254,243,226,1) 0%, rgba(196,143,101,1) 100%);
        }
        body {
            background-color: #C48F65;
        }

    </style>
</head>

<body>
    <h1 style="margin-top: 10%; margin-bottom:64px; text-align:center;" class="w3-center w3-jumbo">Appetizers</h1>

    @foreach (var mainDish in Model) {
        <div class="card">
            <div id="firsthalf">
                <div>
                    <h2>@mainDish.MainDishName</h2>
                    <div style="display: flex; flex-direction: row;">
                        @if (@mainDish.isVegetarian) {
                            <span style="color: green; border: 2px darkgreen solid; padding: 5px; background-color: #C1EAB7; border-radius: 15px;">Vegetarian</span>
                        } else {
                            <span style="color: #d80000; border: 2px darkred solid; padding: 5px; background-color: #ffd1c5; border-radius: 15px;">Non-Vegetarian</span>
                        }
                        <h5 style="margin-left: 5%;"><b>Prep Time:</b> <span style="color: #b0805a; border: 2px #b0805a solid; padding: 5px; border-radius: 15px;">@mainDish.CookingTime</span> min</h5>
                    </div>
                    <h5 style="margin-right: 5%; margin-top: 5%; text-align: justify;">@mainDish.MainDishDescription</h5>
                </div>
                <img src="@mainDish.MainDishImage.File.Url" alt="@mainDish.MainDishImage.File.Url" class="img"/>
            </div>
            <div id="secondhalf">
                <h3 width="20%" height="auto" style="padding: 2%; text-align:center;">Wanna learn how to make <span>@mainDish.MainDishName</span>? Here's a tutorial!</h3>
                <iframe src="@mainDish.MainDishTutorial" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
        </div>
        
    }

    <div id="saved"></div>



    <div class="text-center">
        <h1 class="display-4">Enjoy trying these meals! :&#41;</h1>
    </div>
</body>

