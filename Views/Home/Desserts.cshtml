@using Contentful.Core.Models;

@model ContentfulCollection<Desserts>

@{
    ViewData["Title"] = "Desserts";
}

<head>
    <style>
        .img,iframe {
            width: 30%;
            height: auto;
            outline: #b0805a solid 0.4rem;
        }
        .card {
            margin-top: 20px;
            border: black;
        }
        h2,h3,h4,h5,h6,span {
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        }
        #firsthalf, #secondhalf {
            display: flex; 
            flex-direction:row; 
            align-items:center; 
            padding:3%; 
            justify-content:space-between;
        }
        #firsthalf {
            background-color: #FEF3E2;
        }
        #secondhalf {
            background: rgb(254,243,226);
            background: linear-gradient(180deg, rgba(254,243,226,1) 0%, rgba(196,143,101,1) 100%);
        }
        body {
            background-color: #C48F65;
        }

    </style>
</head>

<body>
    <h1 style="margin-top: 10%; margin-bottom:64px; text-align:center;" class="w3-center w3-jumbo">Desserts</h1>

    @foreach (var dessert in Model) {
        <div class="card">
            <div id="firsthalf">
                <div>
                    <h2>@dessert.DessertName</h2>
                    <h5><b>Prep Time:</b> <span style="color: #b0805a; border: 2px #b0805a solid; padding: 5px; border-radius: 15px;">@dessert.CookingTime</span> min</h5>
                    <h5 style="margin-right: 5%; margin-top: 5%; text-align: justify;">@dessert.DessertDescription</h5>
                </div>
                <img src="@dessert.DessertImage.File.Url" alt="@dessert.DessertImage.File.Url" class="img"/>
            </div>
            <div id="secondhalf">
                <h3 width="20%" height="auto" style="padding: 2%; text-align:center;">Wanna learn how to make <span>@dessert.DessertName</span>? Here's a tutorial!</h3>
                <iframe src="@dessert.DessertTutorial" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
        </div>
    }

    <div class="text-center">
        <h1 class="display-4">Enjoy trying these meals! :&#41;</h1>
    </div>

</body>

