@using Contentful.Core.Models;

@model ContentfulCollection<Appetizers>

@{
    ViewData["Title"] = "Appetizers";
}

<style>
    .img {
        background-color: #aaa;
        width: 30%;
        height: auto;
    }
    .card {
        margin-top: 20px;
        border: black;
    }
    h2,h3,h4,h5,h6 {
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    }
    #firsthalf, #secondhalf {
        display: flex; 
        flex-direction:row; 
        align-items:center; 
        padding:3%; 
        justify-content:space-between;
    }
    #firsthalf {
        background-color: #FEF3E2;
    }
    #secondhalf {
        background: rgb(254,243,226);
        background: linear-gradient(180deg, rgba(254,243,226,1) 0%, rgba(196,143,101,1) 100%);
    }
    body {
        background-color: #C48F65;
    }

</style>

<body>
    <h1 style="margin-top: 10%; margin-bottom:64px; text-align:center;" class="w3-center w3-jumbo">Appetizers</h1>

    @foreach (var appetizer in Model) {
        <div class="card">
            <div id="firsthalf">
                <div>
                    <h2>@appetizer.AppetizerName</h2>
                    <h5>@appetizer.AppetizerDescription</h5>
                </div>
                <img src="@appetizer.AppetizerImage.File.Url" alt="@appetizer.AppetizerImage.File.Url" class="img"/>
            </div>
            <div id="secondhalf">
                <h3 width="20%" height="auto" style="padding: 2%; text-align:center;">Wanna learn how to make <span>@appetizer.AppetizerName</span>? Here's a tutorial!</h3>
                <iframe width="30%" height="auto" src="@appetizer.AppetizerTutorial" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
        </div>
    }

    <div class="text-center">
        <h1 class="display-4">Enjoy trying these meals! :&#41;</h1>
    </div>
</body>

